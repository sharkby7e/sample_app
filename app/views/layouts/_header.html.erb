<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", "#" %></li>
          <li data-controller="dropdown">
            <a href="#" data-action="dropdown#toggle click@window->dropdown#hide">
              Account
              <b class="caret"></b>
            </a>
            <ul data-dropdown-target="menu" class="dropdown-list">
              <li class="dropdown-link"><%= link_to "Profile", current_user %></li>
              <li class="dropdown-link"><%= link_to "Settings", "#" %></li>
              <li class="dropdown-link">
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
